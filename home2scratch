 # Create folder and copy input to scratch. This will copy the input file 'input_file' to /nfs/scratch/$USER
input_path=$PWD
input_folder=${input_path#$HOME/}

mkdir -p /scratch-local/$USER/$input_folder
cp -r . /scratch-local/$USER/$input_folder
  
cd /scratch-local/$USER/$input_folder
 
echo "done!"
# Execute the program in parallel on ntasks cores
cd initBL

module load MATLAB/2021a-upd3;  matlab -nosplash -nodesktop -r "run Main.m; exit"

cd ..

make

sbatch JOB_IG_3D

rm home2scratch





